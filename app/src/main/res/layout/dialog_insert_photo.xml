<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/btTakePhotos"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/bt_take_photos"
        android:drawableLeft="@drawable/ic_add_a_photo_gray_24dp"
        android:drawableStart="@drawable/ic_add_a_photo_gray_24dp"
        android:layout_margin="@dimen/bt_margin"
        android:textAllCaps="false"
        android:textSize="@dimen/bt_text_size_fix"
        android:textColor="@color/Gray"
        android:background="@drawable/custom_button"

        android:onClick="takePhotos">
    </Button>
    <Button
        android:id="@+id/btChoosePhotos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bt_choose_photos"
        android:drawableLeft="@drawable/ic_insert_photo_gray_24dp"
        android:drawableStart="@drawable/ic_insert_photo_gray_24dp"
        android:layout_margin="@dimen/bt_margin"
        android:textAllCaps="false"
        android:textSize="@dimen/bt_text_size_fix"
        android:textColor="@color/Gray"
        android:background="@drawable/custom_button"
        android:onClick="choosePhotos"/>

</LinearLayout>